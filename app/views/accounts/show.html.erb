<h1>Accounts#show</h1>
<div>
  <h1><%= @account.full_name %></h1>
  <p>Account number: <%= @account.account_number %></p>
  <% if @account.address %>
  <p>Address: <%= @account.address %>, <%= @account.suburb %></p>, <%= @account.postcode %></p>
  <p>Mobile number: <%= @account.mobile %></p>
  <p>Social media: <%= @account.social_media %></p>
  <% end %>
</div>
<% if user_signed_in? &&  current_user.account.profile.blank? %>
<%= link_to "Create Profile", new_profile_path %>
<% else %>
<%= link_to "Update Profile", edit_profile_path%>
<%= link_to "Delete", profile_path, method: :delete %>
<%end%>
<%= link_to "Update Account", edit_account_path %>


<%= link_to "Back", root_path %>